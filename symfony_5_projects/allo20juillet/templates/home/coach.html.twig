{% extends "base.html.twig" %}

{% block title %}
	MC SPORTIFS Coachs!
{% endblock title %}


{% block body %}

	{{ include("partial/title_section.html.twig", {'name':'Nos coachs'}) }}

	<div class="section">
		<div class="container">
			<div class="row">
				<div class="col-lg-9">
					<div class="row shop_container">
						{% if not annonces %}
							<p class="m-5">Désolé. Aucun coach n'a été trouvé sur la recherche que vous avez effectué !</p>
						{% endif %}
						{% for annonce in annonces %}
							{{ include('partial/_annonce.html.twig',{'annonce': annonce}) }}
						{% endfor %}

					</div>
				</div>
				<div class="col-lg-3 order-lg-first mt-4 pt-2 mt-lg-0 pt-lg-0">
					<div class="sidebar">
						{{ form_start(search) }}
						<div class="widget">
							<h5 class="widget_title">Régions</h5>
							{{ form_row(search.region)}}
						</div>
						<div class="widget">
							<h5 class="widget_title">Départements</h5>
							{{ form_row(search.departement)}}
						</div>
						<div class="widget">
							<h5 class="widget_title">Villes</h5>
							{{ form_row(search.city)}}
						</div>
						{# <div class="widget">
																																																																			<h5 class="widget_title">Quel jour?</h5>
																																																																			{# {{ form_row(search.categories)}} 
																																																																		</div> #}
						<div class="widget">
							<h5 class="widget_title">où ?</h5>
							{{ form_row(search.places)}}
						</div>

						<button class="btn btn-primary btn-border-fill btn-block">
							Rechercher</button>
						{{ form_end(search)}}
					</div>
				</div>
			</div>
		</div>
	</div>


{% endblock %}

{% block javascripts %}
	<script>
		$(document).ready(function () {
$('.js-region-multiple').select2();
});
	</script>
{% endblock %}
