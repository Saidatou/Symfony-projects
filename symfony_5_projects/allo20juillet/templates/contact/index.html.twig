{% extends 'base.html.twig' %}

{% block title %}Contact index
{% endblock %}

{% block body %}
	<h1 class="text-center">Messages re√ßus du formulaire de contact</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Email</th>
				<th>Phone</th>
				<th>Subject</th>
				<th>CreatedAt</th>
				<th>IsRead</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for contact in contacts %}
				<tr>
					<td>{{ contact.id }}</td>
					<td>{{ contact.name }}</td>
					<td>{{ contact.email }}</td>
					<td>{{ contact.phone }}</td>
					<td>{{ contact.subject }}</td>
					<td>{{ contact.createdAt ? contact.createdAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>{{ contact.isRead ? 'Yes' : 'No' }}</td>
					<td>
						<a href="{{ path('contact_show', {'id': contact.id}) }}">show</a>
						<a href="{{ path('contact_edit', {'id': contact.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="8">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	{# <a href="{{ path('contact_new') }}">Create new</a> #}
{% endblock %}
